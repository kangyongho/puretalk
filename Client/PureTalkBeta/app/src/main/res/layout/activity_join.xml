<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro"
    android:padding="30dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/joinIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:hint="아이디"
            android:padding="13dp"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/joinPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:hint="비밀번호"
            android:padding="13dp"
            android:textSize="13dp"
            android:password="true"/>

        <Button
            android:id="@+id/checkIdButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="아이디 중복확인"
            android:textSize="13dp"
            android:textColor="#ffffff"
            android:background="@drawable/intro_button_selector"/>

        <Button
            android:id="@+id/joinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="회원가입"
            android:textSize="13dp"
            android:textColor="#ffffff"
            android:background="@drawable/intro_button_selector"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:text="@string/agreement"/>
        </ScrollView>

        <CheckBox
            android:id="@+id/agreementCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="주소록 이용 동의"
            android:textSize="13dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>